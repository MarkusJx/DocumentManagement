{
  "name": "docman",
  "version": "1.0.0",
  "description": "",
  "main": "out/main.js",
  "scripts": {
    "build": "node --unhandled-rejections=strict buildscripts/build.js",
    "prestart": "npm run build",
    "start": "electron .",
    "pretest": "npm build",
    "test": "mocha",
    "rebuild": "electron-rebuild -p -f -w java && node -e \"require('java/postInstall')\"",
    "postinstall": "npm run-script rebuild",
    "prepack": "npm run build && node --unhandled-rejections=strict buildscripts/prepack.js",
    "pack": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@wojtekmaj/react-daterange-picker": "^3.1.0",
    "custom-electron-titlebar": "^3.2.6",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.8",
    "electron-window-state": "^5.0.3",
    "find-java-home": "^1.1.0",
    "java": "^0.12.1",
    "log4js": "^6.3.0",
    "material-components-web": "^10.0.0",
    "react": "^17.0.1",
    "react-date-picker": "^8.1.0",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/java": "^0.9.1",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.30",
    "@types/react-dom": "^17.0.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "hash-files": "^1.1.1",
    "mocha": "^8.3.0",
    "typescript": "^4.2.2"
  },
  "optionalDependencies": {
    "node-ms-passport": "^1.1.0"
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "11.1.1"
  },
  "build": {
    "appId": "io.github.markusjx",
    "files": [
      "ui/index.html",
      "ui/style.css",
      "out/**",
      "!node_modules/java/build/jvm_dll_path.json"
    ],
    "extraResources": [
      "dbLib/build/libs/*.jar",
      {
        "from": "buildscripts/tmp/jre-11",
        "to": "jre-11",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/jvm_dll_path.json",
        "to": "app/node_modules/java/build/jvm_dll_path.json"
      }
    ],
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-v${version}.${ext}",
      "installerLanguages": [
        "en_US"
      ]
    },
    "asar": false,
    "asarUnpack": "node_modules/java/**"
  }
}
