{
  "name": "docman",
  "version": "0.1.0",
  "description": "A database based document management system",
  "main": "out/main.js",
  "homepage": "https://github.com/MarkusJx/DocumentManagement",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkusJx/DocumentManagement.git"
  },
  "scripts": {
    "build": "node --unhandled-rejections=strict buildscripts/build.js",
    "prestart": "npm run build",
    "start": "electron .",
    "test": "electron . --debug",
    "pretest": "npm run build",
    "prepack": "npm run build && node --unhandled-rejections=strict buildscripts/prepack.js",
    "pack": "electron-builder"
  },
  "author": {
    "name": "MarkusJx",
    "email": "markusjx11@gmail.com",
    "url": "https://markusjx.github.io"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@markusjx/java": "0.1.0-beta.2",
    "@wojtekmaj/react-daterange-picker": "^3.1.0",
    "custom-electron-titlebar": "^3.2.6",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "electron-window-state": "^5.0.3",
    "find-java-home": "^1.2.0",
    "log4js": "^6.3.0",
    "material-components-web": "^10.0.0",
    "open-sans-fonts": "^1.6.2",
    "react": "^17.0.2",
    "react-date-picker": "^8.1.1",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/java": "^0.9.1",
    "@types/node": "^15.0.2",
    "@types/react-dom": "^17.0.4",
    "electron": "^12.0.7",
    "electron-builder": "^22.11.3",
    "hash-files": "^1.1.1",
    "sass": "^1.32.12",
    "typescript": "^4.2.4"
  },
  "optionalDependencies": {
    "node-ms-passport": "^1.1.2"
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "12.0.7"
  },
  "build": {
    "appId": "io.github.markusjx",
    "files": [
      "app/ui/**",
      "out/preload/**",
      "out/shared/**",
      "out/styles/style.css",
      "out/main.js",
      "licenses/**",
      "app/shared/FindJavaHome.js"
    ],
    "extraResources": [
      "dbLib/build/libs/*.jar"
    ],
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-v${version}.${ext}",
      "license": "licenses.txt",
      "installerLanguages": [
        "en_US"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "docman",
        "Comment": "A database based document management system",
        "Terminal": "false"
      }
    },
    "deb": {
      "compression": "gz",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@markusjx/java"
    ]
  }
}
