{
  "name": "docman",
  "version": "0.1.0",
  "description": "A database based document management system",
  "main": "out/main.bundled.js",
  "homepage": "https://github.com/MarkusJx/DocumentManagement",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkusJx/DocumentManagement.git"
  },
  "scripts": {
    "build": "node --unhandled-rejections=strict buildscripts/build.js",
    "prestart": "npm run build",
    "start": "electron .",
    "test": "electron . --debug",
    "pretest": "npm run build",
    "prepack": "npm run build && node --unhandled-rejections=strict buildscripts/prepack.js",
    "pack": "electron-builder"
  },
  "author": {
    "name": "MarkusJx",
    "email": "markusjx11@gmail.com",
    "url": "https://markusjx.github.io"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@markusjx/java": "0.1.0-beta.4",
    "@wojtekmaj/react-daterange-picker": "^3.1.0",
    "core-js": "^3.13.0",
    "custom-electron-titlebar": "^3.2.7",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "electron-window-state": "^5.0.3",
    "find-java-home": "^1.2.0",
    "log4js": "^6.3.0",
    "material-components-web": "^10.0.0",
    "open-sans-fonts": "^1.6.2",
    "react": "^17.0.2",
    "react-date-picker": "^8.1.1",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-react-jsx": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/node": "^15.6.1",
    "@types/react-dom": "^17.0.5",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "csp-html-webpack-plugin": "^5.1.0",
    "css-loader": "^5.2.6",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "hash-files": "^1.1.1",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "node-loader": "^2.0.0",
    "sass": "^1.34.0",
    "sass-loader": "^11.1.1",
    "typescript": "^4.3.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.0",
    "webpack-cli": "^4.7.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^3.0.0"
  },
  "optionalDependencies": {
    "node-ms-passport": "^1.1.2"
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "12.0.7"
  },
  "build": {
    "appId": "io.github.markusjx",
    "files": [
      "out/**",
      "licenses/**",
      "app/shared/FindJavaHome.js"
    ],
    "extraResources": [
      "dbLib/build/libs/*.jar"
    ],
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-v${version}.${ext}",
      "license": "licenses.txt",
      "installerLanguages": [
        "en_US"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "docman",
        "Comment": "A database based document management system",
        "Terminal": "false"
      }
    },
    "deb": {
      "compression": "gz",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@markusjx/java"
    ]
  }
}
