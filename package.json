{
  "name": "docman",
  "version": "0.1.0",
  "description": "A database based document management system",
  "main": "out/main.js",
  "homepage": "https://github.com/MarkusJx/DocumentManagement",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkusJx/DocumentManagement.git"
  },
  "scripts": {
    "build": "node --unhandled-rejections=strict buildscripts/build.js",
    "prestart": "npm run build",
    "start": "electron .",
    "pretest": "npm build",
    "test": "mocha",
    "rebuild": "electron-rebuild -p -f -w java && node -e \"require('java/postInstall')\"",
    "postinstall": "npm run-script rebuild",
    "prepack": "npm run build && node --unhandled-rejections=strict buildscripts/prepack.js",
    "pack": "electron-builder"
  },
  "author": {
    "name": "MarkusJx",
    "email": "markusjx11@gmail.com",
    "url": "https://markusjx.github.io"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@markusjx/java": "0.0.6",
    "@wojtekmaj/react-daterange-picker": "^3.1.0",
    "custom-electron-titlebar": "^3.2.6",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.8",
    "electron-window-state": "^5.0.3",
    "find-java-home": "^1.1.0",
    "log4js": "^6.3.0",
    "material-components-web": "^10.0.0",
    "open-sans-fonts": "^1.6.2",
    "react": "^17.0.1",
    "react-date-picker": "^8.1.0",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/java": "^0.9.1",
    "@types/node": "^14.14.30",
    "@types/react-dom": "^17.0.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.10.5",
    "hash-files": "^1.1.1",
    "sass": "^1.32.10",
    "typescript": "^4.2.2"
  },
  "optionalDependencies": {
    "node-ms-passport": "^1.1.2"
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "11.1.1"
  },
  "build": {
    "appId": "io.github.markusjx",
    "files": [
      "app/ui/**",
      "out/preload/**",
      "out/shared/**",
      "out/styles/style.css",
      "out/main.js",
      "licenses/**"
    ],
    "extraResources": [
      "dbLib/build/libs/*.jar",
      {
        "from": "buildscripts/tmp/jre-11",
        "to": "jre-11",
        "filter": [
          "**/*"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-v${version}.${ext}",
      "license": "licenses.txt",
      "installerLanguages": [
        "en_US"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "desktop": {
        "Type": "Application",
        "Encoding": "UTF-8",
        "Name": "docman",
        "Comment": "A database based document management system",
        "Terminal": "false"
      }
    },
    "deb": {
      "compression": "gz",
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "openjdk-11-jre"
      ]
    },
    "asar": false,
    "asarUnpack": [
      "node_modules/java"
    ]
  }
}
